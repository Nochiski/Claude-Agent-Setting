{
  "permissions": {
    "allow": [
      "Bash(echo:*)",
      "Bash(cat:*)",
      "Bash(where:*)",
      "Bash(dir:*)",
      "Bash(npm:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(claude:*)",
      "Bash(powershell:*)",
      "Bash(winget:*)",
      "Bash(rm:*)",
      "Bash(ls:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:news.hada.io)",
      "Read(**)",
      "Glob(**)",
      "Grep(**)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\pre-commit-test.js\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\rules-injector.js\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\auto-format.js\""
          },
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\readme-reminder.js\""
          },
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\edit-error-recovery.js\""
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\empty-task-response-detector.js\""
          }
        ]
      },
      {
        "matcher": "Edit|Write|Task",
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\pipeline-tracker.js\""
          }
        ]
      },
      {
        "matcher": "Glob|Grep|Read|Edit|Write|Task",
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\context-window-monitor.js\""
          },
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\agent-usage-reminder.js\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\pipeline-enforcer.js\""
          },
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\stop-verify.js\""
          },
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\ralph-loop.js\""
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "figma": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "figma-developer-mcp",
        "--stdio"
      ],
      "env": {
        "FIGMA_API_KEY": "${FIGMA_API_KEY}"
      }
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    }
  }
}
