{
  "permissions": {
    "allow": [
      "Bash(echo $env:PATH)",
      "Bash(where:*)",
      "Bash(dir:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:api.github.com)",
      "Read(**)",
      "Glob(**)",
      "Grep(**)",
      "Bash(powershell -ExecutionPolicy Bypass -File install.ps1)",
      "Bash(Test-Path \"C:\\\\Users\\\\USER\\\\.local\\\\bin\\\\claude.exe\")",
      "Bash($env:PATH -split ';')",
      "Bash(Select-String -Pattern \"\\\\.local\")",
      "Bash(echo:*)",
      "Bash(cat:*)",
      "Bash(npm uninstall:*)",
      "Bash(npm install:*)",
      "Bash(claude --version)",
      "Bash(powershell -ExecutionPolicy Bypass -File \"C:\\\\Users\\\\USER\\\\Documents\\\\workspace\\\\claude_agents\\\\install.ps1\")",
      "Bash(gh repo create:*)",
      "Bash(git init:*)",
      "Bash(git add:*)",
      "Bash(git commit -m \"$\\(cat <<''EOF''\nInitial commit: Claude Code Agents ÏûêÎèô ÏÑ§Ï†ï ÎèÑÍµ¨\n\n- 9Í∞ú ÏÑúÎ∏åÏóêÏù¥Ï†ÑÌä∏ \\(oracle, planner, code-reviewer, frontend-designer, librarian, debugger, test-writer, refactorer, formatter\\)\n- 3Í∞ú MCP ÏÑúÎ≤Ñ \\(Context7, Figma, GitHub\\)\n- 5Í∞ú ÏûêÎèôÌôî ÌõÖ \\(rules-injector, auto-format, readme-reminder, stop-verify, comment-checker\\)\n- Windows/Unix ÏÑ§Ïπò Ïä§ÌÅ¨Î¶ΩÌä∏\n- README ÏûêÎèô Ï£ºÏûÖ Í∏∞Îä•\n\nü§ñ Generated with [Claude Code]\\(https://claude.com/claude-code\\)\n\nCo-Authored-By: Claude Opus 4.5 <noreply@anthropic.com>\nEOF\n\\)\")",
      "Bash(winget install:*)",
      "Bash(\"/c/Program Files/GitHub CLI/gh.exe\" auth status)",
      "Bash(\"/c/Program Files/GitHub CLI/gh.exe\" repo create claude-agents --public --description \"Claude Code ÏÑúÎ∏åÏóêÏù¥Ï†ÑÌä∏ ÏûêÎèô ÏÑ§Ï†ï ÎèÑÍµ¨ \\(9Í∞ú ÏóêÏù¥Ï†ÑÌä∏, 3Í∞ú MCP, 5Í∞ú ÌõÖ\\)\" --source=. --remote=origin --push)",
      "WebFetch(domain:www.linkedin.com)",
      "Bash(del \"C:\\\\Users\\\\USER\\\\.claude\\\\hooks\\\\todo-continuation-enforcer.js\")",
      "Bash(git commit:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\pre-commit-test.js\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\rules-injector.js\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\auto-format.js\""
          },
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\readme-reminder.js\""
          },
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\edit-error-recovery.js\""
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\empty-task-response-detector.js\""
          }
        ]
      },
      {
        "matcher": "Glob|Grep|Read|Edit|Write|Task",
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\context-window-monitor.js\""
          },
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\agent-usage-reminder.js\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\stop-verify.js\""
          },
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\ralph-loop.js\""
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "figma": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "figma-developer-mcp",
        "--stdio"
      ],
      "env": {
        "FIGMA_API_KEY": "${FIGMA_API_KEY}"
      }
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    }
  }
}
